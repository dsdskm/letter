{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "rootDir": "./",
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": "./src",
    "paths": {
      "@api/*": ["api/*"],
      "@config/*": ["config/*"],
      "@router/*": ["router/*"]
    }
  },
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  }
}
